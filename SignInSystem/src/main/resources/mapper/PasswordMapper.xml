<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

        <!-- 设置为IUserDao接口方法提供sql语句配置 -->
    <mapper namespace="com.signInSystem.xyz.dao.PasswordMapper">


    <insert id="insertPasswords" parameterType="com.signInSystem.xyz.model.UserPassword">
        insert into user_password values (#{pwdId},#{user_pwd},#{userId})
    </insert>



    <select id="selectUserPassword" parameterType="int" resultType="String">
        select user_pwd from user_password where user_id=#{userId}
    </select>
    <update id="updateUserPassword" parameterType="com.signInSystem.xyz.model.UserPassword" >
        UPDATE user_password SET user_pwd=#{userPwd} WHERE user_id=#{userId}
    </update>

</mapper>