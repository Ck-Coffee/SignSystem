<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

        <!-- 设置为IUserDao接口方法提供sql语句配置 -->
    <mapper namespace="com.signInSystem.xyz.dao.UserMapper">

    <select id="selectUser" resultType="com.signInSystem.xyz.model.Users" parameterType="long">
        select * from Users where user_id = #{user_id}
    </select>
    <insert id="insertUser" parameterType="com.signInSystem.xyz.model.Register">
        insert into Users values(DEFAULT ,#{userName},#{userPhone},#{userQQ},#{userEmail},#{userSex},#{userBirthday},DEFAULT ,DEFAULT )
    </insert>

    <select id="selectPassword" parameterType="com.signInSystem.xyz.model.LoginMessage" resultType="int">
        select user_id from users where user_phone=#{user_phone}
    </select>

</mapper>